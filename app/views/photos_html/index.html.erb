<h1>List of photos</h1>

<% if current_user != nil %>
  <form action="/insert_photo_record" method="post" enctype="multipart/form-data">
    <label for="browser_input">Image</label>
    <input type="file" id="browser_input" name="input_image">

    <label for="browser_caption">Caption</label>
    <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."></textarea>

    <input type="hidden" name="input_owner_id" value="<%= current_user.id %>">

    <button>Add photo</button>
  </form>

<hr>
<% end %>



<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Caption
    </th>

    <th>
      Owner
    </th>

    <th>
      Posted
    </th>

    <td>
    </td>
  </tr>

  <% @list_of_photos.each do |a_photo| %>

    <tr>
      <td>
        <img src="<%= a_photo.image %>" height="300px">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.created_at %>
      </td>

      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
